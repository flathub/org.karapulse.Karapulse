{
    "app-id": "org.karapulse.Karapulse",
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "karapulse",
    "finish-args": [
        "--filesystem=host",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup": [
        "/sdk",
        "/lib/node_modules",
        "/bin/npm",
        "/bin/node",
        "/bin/npx"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/app/sdk/bin",
        "env": {
            "RUSTFLAGS": "--remap-path-prefix =../",
            "CARGO_HOME": "/run/build/karapulse/cargo",
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "karapulse=debug"
        }
    },
    "modules": [
        {
            "name": "nodejs",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://nodejs.org/dist/v18.12.1/node-v18.12.1-linux-x64.tar.xz",
                    "sha256": "4481a34bf32ddb9a9ff9540338539401320e8c3628af39929b4211ea3552a19e"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "arm"
                    ],
                    "url": "https://nodejs.org/dist/v18.12.1/node-v18.12.1-linux-armv7l.tar.xz",
                    "sha256": "d0131a764c0f44821fdacb3c3ab8b35b52af060a98ac7a150ec49d4c540be3d7"
                }
            ],
            "build-commands": [
                "mkdir /app/sdk ; cp -r * /app/sdk/"
            ]
        },
        {
            "name": "karapulse",
            "buildsystem": "meson",
            "config-opts": [
                "-Dcdg-plugin=true",
                "-Dnpm-cache=/run/build/karapulse/npm-cache/",
                "-Doffline=true"
            ],
            "sources": [
                "npm-generated-sources.json",
                "cargo-generated-sources.json",
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gdesmott/karapulse.git",
                    "commit": "9bbdf06fbb6af4e2ea514b034e3f7e4b793b11a9"
                }
            ]
        }
    ]
}
