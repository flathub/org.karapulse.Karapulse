{
    "app-id": "org.karapulse.Karapulse",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "karapulse",
    "finish-args": [
        "--filesystem=host",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup": [
        "/sdk",
        "/lib/node_modules",
        "/bin/npm",
        "/bin/node",
        "/bin/npx"
    ],
    "build-options": {
        "append-path": "/app/sdk/bin",
        "env": {
            "RUSTFLAGS": "--remap-path-prefix =../",
            "CARGO_HOME": "/run/build/Karapulse/cargo",
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "karapulse=debug"
        }
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://static.rust-lang.org/dist/2020-01-07/rust-nightly-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "98e563ba7db92511718112d54de0546793677e9942f26b2c7e91dc291bb958af"
                }
            ],
            "build-commands": [
                "./install.sh --prefix=/app/sdk --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "nodejs",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://nodejs.org/dist/v12.13.1/node-v12.13.1-linux-x64.tar.xz",
                    "sha256": "aca06db37589966829b1ef0f163a5859b156a1d8e51b415bf47590f667c30a25"
                }
            ],
            "build-commands": [
                "mkdir /app/sdk ; cp -r * /app/sdk/"
            ]
        },
        {
            "name": "karapulse",
            "buildsystem": "meson",
            "config-opts": [
                "-Dcdg-plugin=true",
                "-Dnpm-cache=/run/build/karapulse/npm-cache/",
                "-Doffline=true"
            ],
            "sources": [
                "npm-generated-sources.json",
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/gdesmott/karapulse/uploads/cab4f4e406eecf58b288817359bfc2f2/karapulse-0.2.0.tar.xz",
                    "sha256": "3994853dc9d4adf44715626c7568f6afe2639d2c9742a5bf23dd2e9e634cb206"
                }
            ]
        }
    ]
}
