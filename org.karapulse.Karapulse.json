{
    "app-id": "org.karapulse.Karapulse",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "karapulse",
    "finish-args": [
        "--filesystem=host",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "cleanup": [
        "/sdk",
        "/lib/node_modules",
        "/bin/npm",
        "/bin/node",
        "/bin/npx",
        "/lib/libgst*",
        "/pkgconfig",
        "/share/gstreamer-1.0",
        "/lib/pkgconfig",
        "/include",
        "/bin/gst-*",
        "/bin/qrencode"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin:/app/sdk/bin",
        "env": {
            "RUSTFLAGS": "--remap-path-prefix =../",
            "CARGO_HOME": "/run/build/karapulse/cargo",
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "karapulse=debug"
        }
    },
    "modules": [
        {
            "name": "nodejs",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://nodejs.org/dist/v18.12.1/node-v18.12.1-linux-x64.tar.xz",
                    "sha256": "4481a34bf32ddb9a9ff9540338539401320e8c3628af39929b4211ea3552a19e"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://nodejs.org/dist/v18.12.1/node-v18.12.1-linux-arm64.tar.xz",
                    "sha256": "3904869935b7ecc51130b4b86486d2356539a174d11c9181180cab649f32cd2a"
                }
            ],
            "build-commands": [
                "mkdir /app/sdk ; cp -r * /app/sdk/"
            ]
        },
        {
            "name": "qrencode",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://deb.debian.org/debian/pool/main/q/qrencode/qrencode_4.1.1.orig.tar.bz2",
                    "sha512": "981b3242c213e1b40ac88711912dd8c27ea11f3437d1a04b6b226499a6e991a8f0b3b10f818bcc104812192a1dac4ce05f16ecd847a50cb03d4859b84bad89b8"
                }
            ]
        },
        {
            "name": "gstqroverlay",
            "buildsystem": "meson",
            "config-opts": [
                "--auto-features=disabled",
                "-Dqroverlay=enabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-1.24.11.tar.xz",
                    "sha256": "9126c2b7053a5f059db958f43c6a5230d2e843ff9adff8c8c2477ea2457e3315"
                },
                {
                    "type": "patch",
                    "paths": [
                        "0001-qroverlay-Change-pixel-size-to-percent-of-width-or-h.patch"
                    ]
                }
            ]
        },
        {
            "name": "karapulse",
            "buildsystem": "meson",
            "config-opts": [
                "-Dcdg-plugin=enabled",
                "-Dnpm-cache=/run/build/karapulse/npm-cache/",
                "-Doffline=true"
            ],
            "sources": [
                "npm-generated-sources.json",
                "cargo-generated-sources.json",
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gdesmott/karapulse.git",
                    "tag": "0.6.2"
                }
            ]
        }
    ]
}