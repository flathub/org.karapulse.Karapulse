{
    "app-id": "org.karapulse.Karapulse",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "karapulse",
    "finish-args": [
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--filesystem=host",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--device=dri"
    ],
    "add-extensions": {
	"org.freedesktop.Platform.ffmpeg-full": {
            "directory": "lib/ffmpeg",
            "version": "19.08",
            "add-ld-path": "."
        }
    },
    "cleanup": [
        "/sdk",
        "/lib/node_modules",
        "/bin/npm",
        "/bin/node",
        "/bin/npx"
    ],
    "build-options": {
        "append-path": "/app/sdk/rust/bin",
        "env": {
            "RUSTFLAGS": "--remap-path-prefix =../ --error-format=short",
            "CARGO_HOME": "/run/build/Karapulse/cargo",
            "RUST_BACKTRACE": "1",
            "RUST_LOG": "karapulse=debug"
        }
    },
    "modules": [
        {
            "name": "rust",
            "buildsystem": "simple",
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "https://static.rust-lang.org/dist/2019-08-20/rust-nightly-x86_64-unknown-linux-gnu.tar.gz",
                    "sha256": "c2c8adc6601b0d524eab98512c29d1d7ce2914422a6fdf6ebaeaa597a1720d2e"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "i386"
                    ],
                    "url": "https://static.rust-lang.org/dist/2019-08-20/rust-nightly-i686-unknown-linux-gnu.tar.gz",
                    "sha256": "68962e579dd0ffa7ad2eb869350d4f3a25fb1db52b4a99a8893afb9af14fcf01"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "arm"
                    ],
                    "url": "https://static.rust-lang.org/dist/2019-08-20/rust-nightly-arm-unknown-linux-gnueabihf.tar.gz",
                    "sha256": "22e9fc53fc4e907c3ddbc6ecf51976ed635496dea3bbd6bad5c4bd7711020383"
                },
                {
                    "type": "archive",
                    "only-arches": [
                        "aarch64"
                    ],
                    "url": "https://static.rust-lang.org/dist/2019-08-20/rust-nightly-aarch64-unknown-linux-gnu.tar.gz",
                    "sha256": "2f1d2a4a949800feb4609fe26eaa3c5eeacda2541125e788e849d8973906390d"
                }
            ],
            "build-commands": [
                "./install.sh --prefix=/app/sdk/rust --disable-ldconfig --verbose"
            ]
        },
        {
            "name": "nodejs",
            "cleanup": [
                "/include",
                "/share",
                "/app/lib/node_modules/npm/changelogs",
                "/app/lib/node_modules/npm/doc",
                "/app/lib/node_modules/npm/html",
                "/app/lib/node_modules/npm/man",
                "/app/lib/node_modules/npm/scripts"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://nodejs.org/dist/v8.9.2/node-v8.9.2.tar.gz",
                    "sha256": "8038fa61ac4562786fcc6d3229f3caa07a864b94bd5922fe75942a38ea1c3a3b"
                }
            ]
        },
        {
            "name": "karapulse",
            "buildsystem": "meson",
            "config-opts": [
                "-Dcdg-plugin=true",
		"-Dnpm-cache=/run/build/karapulse/npm-cache/",
                "-Doffline=true"
            ],
            "sources": [
                "npm-generated-sources.json",
                {
                    "type": "archive",
                    "url": "https://gitlab.freedesktop.org/gdesmott/karapulse/uploads/5f725520fb3c8bb7444bdda7c84800a5/karapulse-0.1.3.tar.xz",
                    "sha256": "31ff1ea6587ba333ea3cdc8caf80c803058d345adc56a2f7a7667f53e89d38fe"
                }
            ]
        }
    ],
    "cleanup-commands" : [
        "mkdir -p /app/lib/ffmpeg"
    ]
}
